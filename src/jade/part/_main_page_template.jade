include pages/_document_head
	//- 환경 설정
	block settings
		include config/_setting

	head

		meta(http-equiv="X-UA-Compatible", content="IE=Edge")

		//- 문자 인코딩
		meta(charset= encoding)

		//- 문서 타이틀
		title= page_title

		//- 검색엔진 최적화 SEO
		block meta_seo
			include pages/head/_meta_seo

		//- 모바일 최적화
		block meta_viewport
			meta(name="viewport", content="width=device-width, initial-scale=1")

		//- 메인 스타일링
		block stylesheets
			link(rel="stylesheet", href="css/style.css")

		link(href= webfont, rel='stylesheet', type='text/css')
		link(rel="shortcut icon", href="image/icon_favicon.ico")
		link(href=awesomefont, rel='stylesheet')

		block _scripts_head
			include pages/scripts/_scripts_head

	body(
		class=[isMain == true ? 'main-page' : ''],
		class=body_classlist
	)

		#page

			block header
				include pages/body/_header

			block banner
				include pages/body/_banner

			block contents
				include pages/body/_contents

			block section
				include pages/body/_section

			block footer
				include pages/body/_footer